{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "Node",
        "preserveConstEnums": true,
        "removeComments": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*"
    ]
}